package written_final_test2;

public class Problem5 implements Runnable {
	private static int num = 5; 
	private char c; 
	
	Problem5(char c) {
		this.c = c; 
	}
	
	public void run() { 
		changeNum(c);
	}
private static synchronized void changeNum(char ch) { System.out.println(ch + "1 = " + num);
int num1 = num + 2;
Thread.yield();
num = num1;
System.out.println(ch + "2 = " + num); }
}
  public static
Thread t1 = Thread t2 = Thread t3 = t1.start(); t2.start(); t3.start(); try {
      t1.join();
      t2.join();
      t3.join();
} catch (InterruptedException ie) { System.out.println("IE: " + ie.getMessage());
}
System.out.println("num = " + num); }
